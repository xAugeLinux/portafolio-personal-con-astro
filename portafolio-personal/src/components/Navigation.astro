---
import { Astro } from 'astro';
import { siteConfig } from '../config/site';
import "../styles/nav.css";

const currentPath = Astro.url.pathname;
---

<nav>
  <a href="#zero" class="site-name">{siteConfig.title}</a>
  <ul>
    <li>
      <a href="#zero" class={`menu-link ${currentPath === '/' ? 'active' : ''}`}>
        {siteConfig.navigation.home}
      </a>
    </li>
    <li>
      <a href="#one" class={`menu-link ${currentPath === '/about' ? 'active' : ''}`}>
        {siteConfig.navigation.about}
      </a>
    </li>
    <li>
      <a href="#two" class={`menu-link ${currentPath === '/projects' ? 'active' : ''}`}>
        {siteConfig.navigation.projects}
      </a>
    </li>
    <li>
      <a href="#three" class={`menu-link ${currentPath === '/contact' ? 'active' : ''}`}>
        {siteConfig.navigation.contact}
      </a>
    </li>
  </ul>
</nav>